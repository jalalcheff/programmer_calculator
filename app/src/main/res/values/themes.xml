<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProgrammerCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
    <style name="TextStyle.transforming">
        <item name="android:textColor">@color/cyan</item>
    </style>
    <style name="TextStyle.SystemNumber">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyChip">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:backgroundTint">@color/gry</item>
        <item name="android:layout_marginEnd">@dimen/double_extra_small_margin</item>
        <item name="android:layout_marginStart">@dimen/double_extra_small_margin</item>
    </style>

    <style name="MyButton">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="MyButton.NumberButton">
        <item name="android:background">@drawable/number_button</item>

    </style>
    <style name="MyButton.DeleteButton">
        <item name="android:background">@drawable/button_delete</item>
        <item name="android:src">@drawable/baseline_backspace_24</item>


    </style>
    <style name="MyButton.EqualButton">
        <item name="android:background">@drawable/equal_button</item>
    </style>
    <style name="MyButton.ZeroButton">
        <item name="android:background">@drawable/number_button</item>
    </style>
</resources>